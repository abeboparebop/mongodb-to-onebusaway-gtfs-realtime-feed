<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>onebusaway</artifactId>
    <groupId>org.onebusaway</groupId>
    <version>1.1.7</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>onebusaway-gtfs-realtime-producer-demo</artifactId>
  <name>onebusaway-gtfs-locations-producer-demo</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>A quickstart project demonstrating how to produce a GTFS-realtime feed.</description>
  <url>https://github.com/abeboparebop/mongodb-to-onebusaway-gtfs-realtime-feed</url>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/abeboparebop/mongodb-to-onebusaway-gtfs-realtime-feed.git/issues</url>
  </issueManagement>
  <scm>
    <connection>scm:git:http://github.com/abeboparebop/mongodb-to-onebusaway-gtfs-realtime-feed.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/abeboparebop/mongodb-to-onebusaway-gtfs-realtime-feed.git</developerConnection>
    <url>http://github.com/abeboparebop/mongodb-to-onebusaway-gtfs-realtime-feed.git</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <archive>
                <manifest>
                  <addClasspath>true</addClasspath>
                </manifest>
              </archive>
              <shadedClassifierName>withAllDependencies</shadedClassifierName>
              <transformers>
                <transformer>
                  <mainClass>org.onebusaway.gtfs_realtime.producer_demo.GtfsRealtimeProducerDemoMain</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>public.onebusaway.org</id>
      <url>http://nexus.onebusaway.org/content/groups/public/</url>
    </repository>
  </repositories>
</project>

